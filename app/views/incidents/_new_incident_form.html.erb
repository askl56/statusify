<h3>New Incident</h3>
<%= render 'shared/error_messages' %>

<%= form_for(@incident) do |f| %>
    <%= f.text_field :name, placeholder: 'Incident name' %>
		<br />
    <%= f.text_area :message, placeholder: 'Message to users' %>
		<br />
    <%= f.text_field :component, placeholder: 'Components affected' %>
		<br />
    <%= f.label 'Begins:' %>
    <%= f.datetime_select :begins %>
    <br />
    <%= f.label 'Ends:' %>
    <%= f.datetime_select :ends %>
		<br />
    <%= f.submit 'Create Issue', class: 'btn btn-primary' %>
<% end %>
