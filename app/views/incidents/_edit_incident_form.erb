<h3>Edit Incident</h3>
<%= render 'shared/error_messages' %>

<%= form_for @incident, url: {id: @incident.id} do |f| %>
    <%= f.text_field :name, input_html: {value: @incident.name}%>
		<br />
    <%= f.text_area :message, input_html: {value: @incident.message}%>
		<br />
    <%= f.text_field :component, input_html: {value: @incident.component}%>
		<br />
    <%= f.label 'Begins:' %>
    <%= f.datetime_select :begins, input_html: {value: @incident.begins} %>
    <br />
    <%= f.label 'Ends:' %>
    <%= f.datetime_select :ends, input_html: {value: @incident.ends} %>
		<br />
    <%= f.submit 'Edit Incident', class: 'btn btn-primary' %>
<% end %>
